<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back_svg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/a"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_account"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_privacy"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_block"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_switch"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_language"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pro_stroage"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_help"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_delete"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pro_change"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>