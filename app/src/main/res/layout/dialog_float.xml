<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical">    <Button        android:paddingLeft="20dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_addfriend"        android:id="@+id/dialog_addfriend"        android:text="   ADD FRIEND"        android:textSize="16dp"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="20dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_createg"        android:id="@+id/diglog_creatgroup"        android:text="   CREATE GROUP"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="20dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_creats"        android:id="@+id/dialog_creatsocial"        android:text="   CREATE SOCIAL"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="22dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_qr"        android:id="@+id/dialog_qr"        android:text="    QR CODE"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="20dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_broad"        android:id="@+id/dialog_broadcast"        android:text="    BRODADCAST MESSAGES"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="20dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_flaat_head"        android:id="@+id/dialog_customer"        android:text="    SUCTOMER SERVICE"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/>    <Button        android:textSize="16dp"        android:paddingLeft="19dp"        android:textAlignment="textStart"        android:drawableLeft="@drawable/ic_float_creats"        android:id="@+id/dialog_logout"        android:text="    LOGOUT"        android:background="@color/white"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textColor="@color/black"/></LinearLayout>