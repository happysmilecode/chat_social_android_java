<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_doc"
            android:id="@+id/chat_doc"
            android:background="?android:attr/selectableItemBackground"
            android:text="   Document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_search"
            android:id="@+id/chat_search_btn"
            android:background="?android:attr/selectableItemBackground"
            android:text="   Search chat history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_delete"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/chat_delete_btn"
            android:text="   Delete chat history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_back"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/chat_background_btn"
            android:text="   Chat background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="19dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_pjng"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/chat_ping_btn"
            android:text="   PING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16dp"
            android:paddingLeft="21dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_chat_notice"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/chat_notice_btn"
            android:text="    Notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>