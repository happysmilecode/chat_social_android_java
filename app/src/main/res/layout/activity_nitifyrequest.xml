<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back_svg"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"/>


        <RelativeLayout
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPic"
                android:src="@drawable/janate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:hint="User Name"
            android:text="Janet Fowler"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/userEmail"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text=" @Jannet"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/userphone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:hint="User Phone"
            android:text="+123456789012"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greystory"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>

        <EditText
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:lines="5"
            android:textSize="15dp"
            android:text="@string/request_message"
            android:background="@drawable/message_bg"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greystory"/>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Accept"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/ic_accept_btn"/>

            <Button
                android:layout_marginLeft="30dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Reject"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/ic_reject_btn"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Through Phone number added you"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>